<% layout("/layouts/boilerplate") -%>
<style>
  a {
  text-decoration: none; /* Removes underline */
}

#filters {
  position: fixed; /* Ensures the filters stay at the top */
  top: 60px; /* Adjust this to match the height of your navbar */
  left: 0;
  width: 100%; /* Full width */
  z-index: 1000; /* Keeps it above other elements */
  background-color: white;
  padding: 10px;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 15px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
}

/* Ensure body content starts below the filters */
.content {
  margin-top: 40px; /* Pushes content below the filters */
}

/* Individual filter button styling */
#filter {
  margin-top: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  cursor: pointer;
  width: 90px;
  height: 70px;
  padding: 8px;
  border-radius: 10px;
  transition: all 0.3s ease-in-out;
}

/* Filter icons */
#filter i {
  font-size: 20px;
  color: #dc3545;
  display: block;
  margin-bottom: 3px;
}

/* Hover effect */
#filter i:hover {
  color: #f0939c;
}

/* Filter text styling */
#logoParagraph {
  font-size: 10px;
  font-weight: bold;
  color: #333;
  margin: 0;
  text-align: center;
}

/* üåç Responsive Design for Small Screens */
@media (max-width: 768px) {
  #filters {
    flex-direction: row;
    justify-content: flex-start;
    overflow-x: auto; /* Allows horizontal scrolling */
    padding: 5px;
    top: 80px; /* Adjust if needed */
  }

  #filter {
    width: 80px;
    height: 75px;
    padding: 6px;
  }

  #filter i {
    font-size: 16px;
  }

  #logoParagraph {
    font-size: 10px;
    white-space: nowrap; /* Ensures text is in a single line */
  }
}

</style>
